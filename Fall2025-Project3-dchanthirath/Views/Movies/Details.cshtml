@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model Fall2025_Project3_dchanthirath.Models.MovieDetailsViewModel

@{
    ViewData["Title"] = Model.Movie.Title;
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        @if (Model.Movie.Poster != null)
        {
            var base64 = Convert.ToBase64String(Model.Movie.Poster);
            var imgSrc = $"data:image/jpeg;base64,{base64}";
            <img src="@imgSrc" class="img-fluid rounded" alt="@Model.Movie.Title Poster" />
        }
        else
        {
            <div class="alert alert-secondary py-5 text-center">No Poster Available</div>
        }
    </div>
    <div class="col-md-8">
        <h4>Movie Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Movie.Title)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Movie.Title)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Movie.Year)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Movie.Year)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Movie.Genre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Movie.Genre)</dd>

            <dt class="col-sm-3">IMDb</dt>
            <dd class="col-sm-9">
                <a href="@Model.Movie.ImdbHyperlink" target="_blank" class="btn btn-sm btn-outline-primary">View on IMDb</a>
            </dd>
        </dl>
    </div>
</div>

<hr />

<h4>Cast</h4>
@if (Model.ActorsInMovie != null && Model.ActorsInMovie.Any())
{
    <table class="table table-striped" id="CastTable">
        <thead>
            <tr>
                <th>Actor</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var actor in Model.ActorsInMovie)
            {
                <tr>
                    <td>
                        <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id">@actor.Name</a>
                    </td>
                    <td>@actor.Age</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No actors listed for this movie.</p>
}

<hr />

<div>
    <h3>AI Reviews</h3>
    <h4>
        Overall Sentiment: 
        <span class="badge @(Model.OverallSentimentLabel == "Positive" ? "bg-success" : (Model.OverallSentimentLabel == "Negative" ? "bg-danger" : "bg-secondary"))">
            @Model.OverallSentimentLabel (@Model.OverallSentimentScore.ToString("F2"))
        </span>
    </h4>
    <table class="table table-bordered table-sm mt-3" id="ReviewTable">
        <thead class="table-dark">
            <tr>
                <th>Review</th>
                <th style="width: 180px;">Sentiment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model.Reviews)
            {
                <tr>
                    <td>@review.ReviewText</td>
                    <td class="@(review.SentimentLabel == "Positive" ? "text-success" : (review.SentimentLabel == "Negative" ? "text-danger" : "text-muted"))">
                        @review.SentimentLabel (@review.SentimentScore.ToString("F2"))
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-action="Edit" asp-route-id="@Model.Movie.Id" class="btn btn-primary">Edit</a> <span>|</span>
    }
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#CastTable').DataTable();
            $('#ReviewTable').DataTable();
        });
    </script>
}