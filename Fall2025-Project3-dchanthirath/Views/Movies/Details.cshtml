@model Fall2025_Project3_dchanthirath.Models.MovieDetailsViewModel

@{
    ViewData["Title"] = Model.Movie.Title;
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Movie Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>

        @* FIX: Changed ReleaseDate to Year *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Year)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>

        <dt class="col-sm-2">
            IMDb
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.Movie.ImdbHyperlink" target="_blank">Link</a>
        </dd>
    </dl>
</div>

@* FIX: Changed ActorMovies to ActorsInMovie *@
@if (Model.ActorsInMovie != null && Model.ActorsInMovie.Any())
{
    <h2>Cast</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Actor</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @* FIX: Loop iterates over 'Actor' directly *@
            @foreach (var actor in Model.ActorsInMovie)
            {
                <tr>
                    <td>
                        <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id">@actor.Name</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => actor.Age)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No actors linked to this movie.</p>
}

<hr />

@* Added Section for AI Reviews *@
<div>
    <h3>AI Reviews</h3>
    <h4>Overall Sentiment: @Model.OverallSentimentLabel (@Model.OverallSentimentScore.ToString("F2"))</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Review</th>
                <th>Sentiment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model.Reviews)
            {
                <tr>
                    <td>@review.ReviewText</td>
                    <td>@review.SentimentLabel (@review.SentimentScore)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Movie.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<div class="mt-3">
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-action="Edit" asp-route-id="@Model.Movie.Id" class="btn btn-primary">Edit</a> <span>|</span>
    }
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>