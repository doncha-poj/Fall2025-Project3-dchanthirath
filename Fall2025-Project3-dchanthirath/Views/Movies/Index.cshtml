@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<Fall2025_Project3_dchanthirath.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>

@if (SignInManager.IsSignedIn(User))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Movie</a>
    </p>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <table class="table table-hover align-middle" id="MovieTable">
            <thead class="table-light"> <tr>
                    <th>Poster</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Year</th>
                    <th>Actions</th>
                </tr>
            </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 100px;">
                    @if (item.Poster != null)
                    {
                        var base64 = Convert.ToBase64String(item.Poster);
                        var imgSrc = $"data:image/jpeg;base64,{base64}";
                        <img src="@imgSrc" style="max-height: 100px; max-width: 70px;" class="rounded shadow-sm" alt="@item.Title" />
                    }
                    else
                    {
                        <div class="text-muted border d-flex align-items-center justify-content-center" style="height: 100px; width: 70px;">
                            No Poster
                        </div>
                    }
                </td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Title)</td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Genre)</td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Year)</td>
                <td class="align-middle text-end"> <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="View Details">
                        <i class="bi bi-eye-fill"></i> <span class="d-none d-md-inline">Details</span>
                    </a>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                            <i class="bi bi-pencil-square"></i> <span class="d-none d-md-inline">Edit</span>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#MovieTable').DataTable();
        });
    </script>
}