@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<Fall2025_Project3_dchanthirath.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>

@if (SignInManager.IsSignedIn(User))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Movie</a>
    </p>
}

<table class="table table-striped table-hover" id="MovieTable">
    <thead>
        <tr>
            <th>Poster</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Genre)</th>
            <th>@Html.DisplayNameFor(model => model.Year)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 100px;">
                    @if (item.Poster != null)
                    {
                        var base64 = Convert.ToBase64String(item.Poster);
                        var imgSrc = $"data:image/jpeg;base64,{base64}";
                        <img src="@imgSrc" style="max-height: 100px; max-width: 70px;" class="rounded shadow-sm" alt="@item.Title" />
                    }
                    else
                    {
                        <div class="text-muted border d-flex align-items-center justify-content-center" style="height: 100px; width: 70px;">
                            No Poster
                        </div>
                    }
                </td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Title)</td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Genre)</td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Year)</td>
                <td class="align-middle">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#MovieTable').DataTable();
        });
    </script>
}