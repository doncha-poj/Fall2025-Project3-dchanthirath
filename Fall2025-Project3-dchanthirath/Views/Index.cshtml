@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section text-center p-5 mb-4 rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Movie AI Manager</h1>
        <p class="fs-4 col-md-8 mx-auto">
            Welcome to the future of film management. Browse your collection,
            manage actors, and get instant AI-powered reviews and sentiment analysis.
        </p>
        <a asp-controller="Movies" asp-action="Index" class="btn btn-primary btn-lg mt-3">Browse Movies</a>
        <a asp-controller="Actors" asp-action="Index" class="btn btn-outline-light btn-lg mt-3">Manage Actors</a>
    </div>
</div>

<!-- Features Section -->
<div class="row text-center">
    <div class="col-md-4">
        <div class="feature-card p-4">
            <h2 class="fs-4">Manage Movies</h2>
            <p>Keep a detailed catalog of your film collection, complete with posters, genres, and release years. Add, edit, and delete movies with ease.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="feature-card p-4">
            <h2 class="fs-4">Catalog Actors</h2>
            <p>Maintain a database of actors, including their photos, age, and filmography. Link actors to the movies they've starred in.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="feature-card p-4">
            <h2 class="fs-4">AI-Powered Insights</h2>
            <p>Get 10 unique, AI-generated movie reviews and 20 simulated tweets for any actor, complete with in-depth sentiment analysis.</p>
        </div>
    </div>
</div>