@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<Fall2025_Project3_dchanthirath.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<h1>Actors</h1>

@if (SignInManager.IsSignedIn(User))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Actor</a>
    </p>
}

<table class="table table-striped table-hover" id="ActorTable">
    <thead>
        <tr>
            <th>Photo</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 100px;">
                    @if (item.Photo != null)
                    {
                        var base64 = Convert.ToBase64String(item.Photo);
                        var imgSrc = $"data:image/jpeg;base64,{base64}";
                        <img src="@imgSrc" style="max-height: 80px; max-width: 80px;" class="rounded" alt="@item.Name" />
                    }
                    else
                    {
                        <span class="text-muted small">No Photo</span>
                    }
                </td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Gender)</td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Age)</td>
                <td class="align-middle">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ActorTable').DataTable();
        });
    </script>
}