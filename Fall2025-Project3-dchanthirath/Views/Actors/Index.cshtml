@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<Fall2025_Project3_dchanthirath.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<h1>Actors</h1>

@if (SignInManager.IsSignedIn(User))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Actor</a>
    </p>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <table class="table table-hover align-middle" id="ActorTable">
            <thead class="table-light"> <tr>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Age</th>
                    <th>Actions</th>
                </tr>
            </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center" style="width: 100px;">
                    @if (item.Photo != null)
                    {
                        var base64 = Convert.ToBase64String(item.Photo);
                        var imgSrc = $"data:image/jpeg;base64,{base64}";
                        <img src="@imgSrc" class="rounded-circle border shadow-sm"
                                style="width: 80px; height: 80px; object-fit: cover;"
                                alt="@item.Name" />
                    }
                    else
                    {
                        @* Fallback circle with an icon if they haven't uploaded a photo yet *@
                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white mx-auto"
                                style="width: 80px; height: 80px;">
                            <i class="bi bi-person-fill fs-2"></i>
                        </div>
                    }
                </td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Gender)</td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Age)</td>
                <td class="align-middle text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="View Details">
                        <i class="bi bi-eye-fill"></i> <span class="d-none d-md-inline">Details</span>
                    </a>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                            <i class="bi bi-pencil-square"></i> <span class="d-none d-md-inline">Edit</span>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ActorTable').DataTable();
        });
    </script>
}