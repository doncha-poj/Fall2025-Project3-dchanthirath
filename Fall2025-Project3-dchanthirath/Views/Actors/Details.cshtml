@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model Fall2025_Project3_dchanthirath.Models.ActorViewModels.ActorDetailsViewModel

@{
    ViewData["Title"] = Model.Actor.Name;
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 text-center">
        @if (Model.Actor.Photo != null)
        {
            var base64 = Convert.ToBase64String(Model.Actor.Photo);
            var imgSrc = $"data:image/jpeg;base64,{base64}";
            <img src="@imgSrc" class="img-fluid rounded mb-3" style="max-height: 300px;" alt="@Model.Actor.Name" />
        }
        else
        {
             <div class="alert alert-secondary py-5">No Photo Available</div>
        }
    </div>
    <div class="col-md-8">
        <h4>Actor Profile</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Actor.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Actor.Name)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Actor.Age)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Actor.Age)</dd>
            
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Actor.Gender)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Actor.Gender)</dd>

            <dt class="col-sm-3">IMDb</dt>
            <dd class="col-sm-9">
                <a href="@Model.Actor.ImdbHyperlink" target="_blank" class="btn btn-sm btn-outline-primary">View Profile</a>
            </dd>
        </dl>
    </div>
</div>

<hr />

<h4>Filmography</h4>
@if (Model.MoviesWithActor != null && Model.MoviesWithActor.Any())
{
    <table class="table table-striped" id="FilmTable">
        <thead>
            <tr>
                <th>Movie Title</th>
                <th>Year</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.MoviesWithActor)
            {
                <tr>
                    <td>
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Title</a>
                    </td>
                    <td>@movie.Year</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No movies linked to this actor.</p>
}

<hr class="my-4" />

<div>
    <h3>AI "Twitter-verse" Reactions</h3>
    <h4>
        Overall Sentiment: 
        <span class="badge @(Model.OverallSentimentLabel == "Positive" ? "bg-success" : (Model.OverallSentimentLabel == "Negative" ? "bg-danger" : "bg-secondary"))">
            @Model.OverallSentimentLabel (@Model.OverallSentimentScore.ToString("F2"))
        </span>
    </h4>
    <table class="table table-bordered table-sm mt-3" id="TweetTable">
        <thead class="table-dark">
            <tr>
                <th>Tweet</th>
                <th style="width: 180px;">Sentiment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tweet in Model.Tweets)
            {
                <tr>
                    <td>@tweet.TweetText</td>
                    <td class="@(tweet.SentimentLabel == "Positive" ? "text-success" : (tweet.SentimentLabel == "Negative" ? "text-danger" : "text-muted"))">
                        @tweet.SentimentLabel (@tweet.SentimentScore.ToString("F2"))
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-action="Edit" asp-route-id="@Model.Actor.Id" class="btn btn-primary">Edit</a> <span>|</span>
    }
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#FilmTable').DataTable();
            $('#TweetTable').DataTable();
        });
    </script>
}