@model ActorDetailsViewModel

@{
    ViewData["Title"] = Model.Actor.Name;
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        @if (Model.Actor.Photo != null)
        {
            var base64 = Convert.ToBase64String(Model.Actor.Photo);
            var imgSrc = $"data:image/jpeg;base64,{base64}";
            <img src="@imgSrc" class="img-fluid rounded" style="max-height: 300px;" alt="@Model.Actor.Name" />
        }
        else
        {
            <div class="alert alert-secondary">No Photo Available</div>
        }
    </div>
    <div class="col-md-8">
        <h4>Actor Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Actor.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Actor.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Actor.BirthDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Actor.BirthDate)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Actor.Age)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Actor.Age)
            </dd>

            <dt class="col-sm-3">
                IMDb
            </dt>
            <dd class="col-sm-9">
                <a href="@Model.Actor.ImdbHyperlink" target="_blank">View Profile</a>
            </dd>
        </dl>
    </div>
</div>

<hr />

@if (Model.MoviesWithActor != null && Model.MoviesWithActor.Any())
{
    <h2>Filmography</h2>
    <table class="table table-striped" id="MovieTable">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Year</th>
            </tr>
        </thead>
        <tbody>
            @* FIX: Iterating over Movie objects directly *@
            @foreach (var movie in Model.MoviesWithActor)
            {
                <tr>
                    <td>
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Title</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => movie.Year)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No movies linked to this actor.</p>
}

<hr />

<div>
    <h3>AI "Twitter-verse" Reactions</h3>
    <h4>Overall Sentiment: @Model.OverallSentimentLabel (@Model.OverallSentimentScore.ToString("F2"))</h4>
    <table class="table table-bordered" id="TweetTable">
        <thead>
            <tr>
                <th>Tweet</th>
                <th>Sentiment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tweet in Model.Tweets)
            {
                <tr>
                    <td>@tweet.TweetText</td>
                    <td class="@(tweet.SentimentLabel == "Positive" ? "text-success" : (tweet.SentimentLabel == "Negative" ? "text-danger" : "text-muted"))">
                        @tweet.SentimentLabel (@tweet.SentimentScore.ToString("F2"))
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-action="Edit" asp-route-id="@Model.Actor.Id" class="btn btn-primary">Edit</a> <span>|</span>
    }
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>