@model ActorDetailsViewModel

@{
    ViewData["Title"] = Model.Actor.Name;
}

<div class="row">
    <div class="col-md-4 text-center">
        @if (Model.Actor.Photo != null)
        {
            var base64 = Convert.ToBase64String(Model.Actor.Photo);
            var imgSrc = $"data:image/jpeg;base64,{base64}";
            <img src="@imgSrc" class="img-fluid rounded mb-3" alt="@Model.Actor.Name" />
        }
        else
        {
            <div class="alert alert-secondary">No Photo Available</div>
        }
    </div>
    <div class="col-md-8">
        <h1>@Model.Actor.Name</h1>
        <p><strong>Age:</strong> @Model.Actor.Age</p>
        <p><strong>Gender:</strong> @Model.Actor.Gender</p>
        <p>
            <a href="@Model.Actor.ImdbHyperlink" target="_blank" class="btn btn-outline-primary btn-sm">View on IMDb</a>
        </p>

        <hr />
        <h4>Movies With This Actor</h4>
        @if (Model.MoviesWithActor.Any())
        {
            <ul class="list-group list-group-flush">
                @foreach (var movie in Model.MoviesWithActor)
                {
                    <li class="list-group-item">
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Title</a> (@movie.Year)
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No movies linked to this actor yet.</p>
        }
    </div>
</div>

<hr class="my-4" />

<div class="row">
    <div class="col-12">
        <h3>AI "Twitter-verse" Reactions</h3>
        <h4>
            Overall Sentiment:
            <span class="badge @(Model.OverallSentimentLabel == "Positive" ? "bg-success" : (Model.OverallSentimentLabel == "Negative" ? "bg-danger" : "bg-secondary"))">
                @Model.OverallSentimentLabel (@Model.OverallSentimentScore.ToString("F2"))
            </span>
        </h4>

        <table class="table table-bordered table-striped mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Tweet</th>
                    <th style="width: 200px;">Sentiment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tweet in Model.Tweets)
                {
                    <tr>
                        <td>@tweet.TweetText</td>
                        <td class="@(tweet.SentimentLabel == "Positive" ? "text-success" : (tweet.SentimentLabel == "Negative" ? "text-danger" : "text-muted"))">
                            @tweet.SentimentLabel (@tweet.SentimentScore.ToString("F2"))
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Actor.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>