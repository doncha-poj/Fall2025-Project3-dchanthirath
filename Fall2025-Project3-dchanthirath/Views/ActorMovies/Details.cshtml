@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model Fall2025_Project3_dchanthirath.Models.ActorMovie

@{
    ViewData["Title"] = "Role Details";
}

<h1>Role Details</h1>

<div>
    <h4>Actor-Movie Relationship</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Actor != null)
            {
                <a asp-controller="Actors" asp-action="Details" asp-route-id="@Model.ActorId">
                    @Html.DisplayFor(model => model.Actor.Name)
                </a>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Movie != null)
            {
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId">
                    @Html.DisplayFor(model => model.Movie.Title)
                </a>
            }
        </dd>
    </dl>
</div>
<div>
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> <span>|</span>
    }
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>