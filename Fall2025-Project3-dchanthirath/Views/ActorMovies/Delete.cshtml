@model Fall2025_Project3_dchanthirath.Models.ActorMovie

@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this relationship?</h3>
    <p>This will unlink the actor from the movie, but will not delete the actual Actor or Movie records.</p>
</div>

<div>
    <h4>Relationship Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Actor != null)
            {
                @Html.DisplayFor(model => model.Actor.Name)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Movie != null)
            {
                @Html.DisplayFor(model => model.Movie.Title)
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete Link" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>